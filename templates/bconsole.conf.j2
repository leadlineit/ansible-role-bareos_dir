#{{ ansible_managed }}
Director {
    Name = {{ item.name }}
    Address = {{ item.address | default("localhost") }}
    Password = "{{ item.password }}"
    Description = "{{ item.description | default(item.name) }}"
{% if item.tls_enable is defined %}    
    TLS Enable = {{ item.tls_enable }}
    TLS Require = {{ item.tls_enable }}
    TLS CA Certificate File = {{ bareos_dir.tls_path }}/CA.crt
    TLS Certificate = {{ bareos_dir.tls_path }}/{{ ansible_nodename }}.crt
    TLS Key = {{ bareos_dir.tls_path }}/{{ ansible_nodename }}.key
{% endif %}
}
